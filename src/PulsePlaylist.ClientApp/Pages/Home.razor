@attribute [AllowAnonymous]
@page "/"
@using PulsePlaylist.ClientApp.Layout
@using Microsoft.AspNetCore.Authorization
@layout MainLayout

<PageTitle>PulsePlaylist - Your Music Journey Starts Here</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16">
    <MudGrid>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudPaper Class="pa-16"
                Style="background: linear-gradient(45deg, var(--mud-palette-primary) 30%, var(--mud-palette-secondary) 90%); color: white; border-radius: 16px;">
                <MudText Typo="Typo.h2" Align="Align.Center" Class="mb-8">Transform Your Music Experience</MudText>
                <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-16">Create, discover, and share playlists like
                    never before</MudText>
                <div class="d-flex justify-center">
                    <MudButton Href="/authentication/register" Variant="Variant.Filled" Color="Color.Dark"
                        Size="Size.Large" Class="px-8">
                        Get Started
                    </MudButton>
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" Class="mt-16">
            <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-8">Experience the Power of PulsePlaylist</MudText>
            <MudGrid Justify="Justify.Center" Spacing="6">
                <MudItem xs="12" sm="6" md="4">
                    <MudCard Elevation="0">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudIcon Icon="@Icons.Material.Filled.Mood" Color="Color.Primary" Class="mb-4"
                                    Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6">Smart Music Discovery</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Find your next favorite song with our intelligent recommendation engine.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem xs="12" sm="6" md="4">
                    <MudCard Elevation="0">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudIcon Icon="@Icons.Material.Filled.LibraryMusic" Color="Color.Secondary" Class="mb-4"
                                    Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6">Effortless Organization</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Manage your music library with intuitive tools and features.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem xs="12" sm="6" md="4">
                    <MudCard Elevation="0">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudIcon Icon="@Icons.Material.Filled.Groups" Color="Color.Info" Class="mb-4"
                                    Style="font-size: 3rem;" />
                                <MudText Typo="Typo.h6">Social Experience</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Connect with friends and share your musical journey together.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>
